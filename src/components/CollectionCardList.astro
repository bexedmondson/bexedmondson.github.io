---
import { getCollection, getEntry } from 'astro:content';
import { CardGrid } from '@astrojs/starlight/components';
import LinkIconCard from './LinkIconCard.astro';

const { collectionName, shouldStagger } = Astro.props;
const posts = await getCollection(collectionName);
posts.sort((a,b) => b.id.localeCompare(a.id));
---

<CardGrid stagger={shouldStagger}>
	{
		posts.map((post) => {
            return (
                <LinkIconCard title={post.data.title} icon="puzzle" href={post.filePath}></LinkIconCard>
            )
		})
	}
</CardGrid>